rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function fiddleExists(id) {
      return exists(/databases/$(database)/documents/fiddles/$(id))
    }

    function getFiddle(id) {
      return get(/databases/$(database)/documents/fiddles/$(id))
    }

    match /fiddles/{id} {
      allow get: if true;
      allow create: if
        request.resource.data.owner == request.auth.uid;
      allow update: if
        resource.data.owner == request.auth.uid &&
        request.resource.data.owner == resource.data.owner;
      allow delete: if
        resource.data.owner == request.auth.uid;
    }

    match /fiddles/{id}/versions/{version} {
      allow get, write: if
        !fiddleExists(id) ||
        getFiddle(id).data.owner == request.auth.uid;
    }
  }
}
