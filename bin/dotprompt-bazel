# Convenience wrapper around bazel binary `dotprompt`.

#set -x
set -euo pipefail

if ((EUID == 0)); then
	echo "Please do not run as root"
	exit
fi

GIT_ROOT=$(git rev-parse --show-toplevel)

bazel build //rs/dotprompt-cli:dotprompt
"${GIT_ROOT}/bazel-bin/rs/dotprompt-cli/dotprompt" "$@"
